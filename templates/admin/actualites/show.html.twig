{% extends 'base.html.twig' %}

{% block title %}Actualites{% endblock %}

{% block body %}
    <h1>Actualites</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ actualite.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ actualite.titre }}</td>
            </tr>
            <tr>
                <th>Contenu</th>
                <td>{{ actualite.contenu }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ actualite.date ? actualite.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Legende</th>
                <td>{{ actualite.legende }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ actualite.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_actualites_index') }}">back to list</a>

    <a href="{{ path('admin_actualites_edit', {'id': actualite.id}) }}">edit</a>


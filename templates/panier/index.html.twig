{% extends 'base.html.twig' %}

{% block title %}Votre panier{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1> Votre panier </h1>


<!-- Condition  si cest panier vide ou pas-->
 {% if  items | length > 0 %}
  <table class="table">
        <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
         </thead>

        <tbody>

{% for paniers in panier %}
                  <td>{{ paniers.mallette.titre }} </td>
                  <td>{{ paniers.mallette.prix }} </td>
                  <td>{{ paniers.quantity }} </td>
                   <td>{{ paniers.mallette.prix * paniers.quantity }} </td>
                   <td>

                   <a href="{{ path('panier_remove',{'id': paniers.mallette.id} )}} " class="">

{% extends 'base.html.twig' %}

{% block title %} Inscription {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/inscription.css') }}" rel="stylesheet" />
{% endblock %}

{% block body%}

   <div class="form">

      <h1>Formulaire d'inscription</h1>

      {{ form_start(registrationForm) }} 

         <div class="champs">
            {{ form_label(registrationForm.nom,'Votre nom')}}
            {{ form_widget(registrationForm.nom) }}
         </div>  

         <div class="champs">
            {{ form_label(registrationForm.prenom,'Votre prénom')}} 
            {{ form_widget(registrationForm.prenom) }}
         </div>  


         <div class="champs">
            {{ form_label(registrationForm.email,'Votre email')}}
            {{ form_widget(registrationForm.email) }}
         </div> 

         <div class="champs">
            {{ form_label(registrationForm.password,'Votre mot de passe')}}
            {{ form_widget(registrationForm.password) }}
         </div> 

         <div class="champs">
            {{form_label (registrationForm.voie,'Voie')}}
            {{ form_widget(registrationForm.voie) }}
         </div>

         <div class="champs">
            {{form_label (registrationForm.code_postal,'Code postal')}}
            {{ form_widget(registrationForm.code_postal) }}
         </div> 

            <div class="champs">
               {{form_label (registrationForm.ville,'Ville')}}
               {{ form_widget(registrationForm.ville) }}
            </div> 
         
         <button type="submit" class="">Enregistrer</button>

      {{ form_end(registrationForm) }} 

      <div id="connexCompte">
         <span>Vous avez déjà un compte ?</span>
         <a href="{{ path('app_login')}} ">Connectez-vous</a>
      </div>


   </div>  

{% endblock %}